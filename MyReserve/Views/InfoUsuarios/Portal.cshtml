@model MyReserve.Models.TablasBBDD.Usuarios.Usuarios

@{
    ViewData["Title"] = "Portal";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <meta name="viewport" content="width=device-width" />
    @section Styles {
        <!--El style que renderizamos-->
        <link rel="stylesheet" href="~/css/infousuarios/portal.css" asp-append-version="true" />
    }
    <title>Portal</title>
</head>
<body>
    <div class="container mt-5">
        <div class="row align-items-center">
            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                <h1 class="text-start display-4">
                    Bienvenido @Model.usu_nombre 
                    @Html.ActionLink("", "Editar", "InfoUsuarios", new { Model.usu_id, Model.usu_nombre, Model.usu_correo_electronico, Model.usu_contrasenha }, new { @class = "fa-solid fa-user rounded-pill" })
                </h1>
            </div>
            <div class="d-flex d-md-flex col-md-6 col-lg-6 d-lg-flex justify-content-center align-items-center">
                <select class="me-2 form-select form-select-sm w-auto fs-4">
                    <option disabled value="">Selecciona un país</option>
                    @foreach(var pais in Model.listaPaises) {
                        <option value="@pais.pai_nombre">@pais.pai_nombre</option>
                    }
                </select>
                <select class="form-select form-select-sm w-auto fs-4">
                    <option>Ciudad</option>
                </select>
                <input class="ms-2" type="text" placeholder="Introduce tu Ciudad"/>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-start mb-4">
                <h2>Encuentra tu peluquería ideal en <span id="selectCiudad"></span></h2>
            </div>
        </div>
        <div>
            <div class="row d-flex flex-wrap">
                <div class="col-12 mb-5 ms-0 peluqueriaInfo">
                    <div class="rounded borderCustom p-3">
                        <div class="d-flex justify-content-between align-items-center w-100 mb-4">
                            <h2 class="text-start">Nombre peluqueria</h2>
                            <p class="text-end">Ciudad, País</p>
                        </div>
                        <div class="footer d-flex opacity-50">
                            <p class="me-3 mb-0"><i class="fa-solid fa-location-dot"></i> Avenida CampoSantos 183 B</p>
                            <p class="mb-0"><i class="fa-solid fa-phone"></i> 633 32 73 02</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>