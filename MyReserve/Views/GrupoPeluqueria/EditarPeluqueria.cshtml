@model MyReserve.Models.TablasBBDD.Peluqueria.Peluqueria

@{
    Layout = "_Layout";
    var grupoNombre = ViewBag.grupoNombre;
    ViewData["Title"] = "EditarPeluqueria";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @section Styles {
        <!--El style que renderizamos-->
        <link rel="stylesheet" href="~/css/formulario/registro.css" asp-append-version="true" />
    }
    <title>Registro</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="d-none d-md-flex col-md-6 d-flex titleSection">
                <h1 class="display-1">My Reserve</h1>
            </div>
            <div class="col-12 col-md-6 d-flex flex-column justify-content-center align-items-center">
                <form asp-action="Editar" method="post" id="editarPeluqueria">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="pelu_id" type="hidden" class="form-control" />
                    <div class="form-group">
                        <label asp-for="pelu_nombre" class="control-label">Nombre</label>
                        <input asp-for="pelu_nombre" class="form-control" id="txtNombre"/>
                        <span asp-validation-for="pelu_nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="pelu_correo_electronico" class="control-label">Correo</label>
                        <input type="email" asp-for="pelu_correo_electronico" class="form-control" id="txtCorreo"/>
                        <span asp-validation-for="pelu_correo_electronico" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="pelu_contrasenha" class="control-label">Contraseña</label>
                        <input asp-for="pelu_contrasenha" class="form-control" id="txtContrasenha"/>
                        <span asp-validation-for="pelu_contrasenha" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="pelu_direccion" class="control-label">Dirección</label>
                        <input asp-for="pelu_direccion" class="form-control" id="txtDireccion"/>
                        <span asp-validation-for="pelu_direccion" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="pelu_telefono" class="control-label">Teléfono</label>
                        <input type="number" asp-for="pelu_telefono" class="form-control" id="txtTel"/>
                        <span asp-validation-for="pelu_telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <p class="text-center text-info">@grupoNombre</p>
                    </div>
                    <div class="form-group mb-2">
                        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <form asp-action="Eliminar" method="post" class="d-flex justify-content-between">
                    <a class="btn btn-outline-info rounded-pill me-5">Volver</a>
                    <input asp-for="pelu_id" type="hidden" class="form-control" />
                    <input type="submit" value="Eliminar Peluqueria" class="btn btn-outline-danger rounded-pill" />
                </form>
            </div>
        </div>
    </div>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/grupos/editar.js"></script>
</html>
