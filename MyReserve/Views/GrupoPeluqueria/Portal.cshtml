@model MyReserve.Models.TablasBBDD.GrupoPeluqueria.GrupoPeluqueria

@{
    ViewData["Title"] = "Portal";
    var gp_id = ViewBag.grupoID;
    var gp_nombre = ViewBag.grupoNombre;
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @section Styles {
        <!--El style que renderizamos-->
        <link rel="stylesheet" href="~/css/grupo/portal.css" asp-append-version="true" />
    }
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="btn btn-outline-info rounded-pill text-decoration-none" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-arrow-left me-2"></i>Volver al inicio</a>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center display-1 mt-5">My Reserve - @Model.gp_nombre</h1>
            </div>
            <div class="col-12">
                <p class="text-center opacity-50">Bienvenido a tu <span class="text-info">portal</span> para gestionar tus peluquerías</p>
            </div>
            <div class="col-auto p-0">
                <a asp-action="RegistroPeluqueria" asp-controller="Formularios" class="btn btn-outline-info rounded-pill btnAddPelu"><i class="fa-solid fa-circle-plus"></i> Añade una nueva peluquería</a>
            </div>
            <div class="col-auto p-0 ms-3">
                @Html.ActionLink("Editar Información", "EditarGrupo", new { @Model.gp_id }, new { @class = "btn btn-outline-info rounded-pill btnEditGP" })
            </div>
        </div>
        <div class="row mt-5 peluquerias d-flex justify-content-center flex-wrap">
            @foreach(var item in Model.peluquerias) {
                <div class="col-12 col-sm-6 col-md-4 col-lg-2 p-2 d-flex justify-content-center">
                    @Html.ActionLink(item.pelu_nombre, "EditarPeluqueria", "GrupoPeluqueria", new { item.pelu_id }, new { @class = "btn btn-outline-info rounded-pill fs-5" })
                </div>
            }
        </div>
    </div>
</body>
</html>
