@{
    ViewData["Title"] = "My Reserve";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @section Styles {
        <!--El style que renderizamos-->
        <link rel="stylesheet" href="~/css/home/home.css" asp-append-version="true" />
    }
</head>
<body>
    <div class="container mt-5">
        <div class="row align-items-center">
            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                <h1 class="text-start title">My Reserve</h1>
            </div>
            <div class="d-none d-md-flex col-md-6 col-lg-6 d-lg-flex justify-content-center align-items-center">
                <button class="btn btn-outline-primary rounded-pill me-2"><a asp-controller="Formularios" asp-action="Login">Inicia Sesión</a></button>
                <button class="btn btn-outline-success rounded-pill"><a asp-controller="Formularios" asp-action="Registro">Registrate</a></button>
            </div>
        </div>
        <div class="row mt-5 mt-md-5 mt-lg-5">
            <div class="col-sm-12 col-md-6 col-lg-6 mt-0 mt-md-5 mt-lg-5">
                <h1 class="text-left display-1 titleMain mt-0 mt-md-5 mt-lg-5">¡Tu peluquería de confianza a tan solo un click!</h1>
                <div class="buttons mt-5">
                    <button class="btn btn-lg btn-outline-primary rounded-pill w-100"> <a asp-controller="Formularios" asp-action="Login">Inicia Sesión</a></button>
                    <button class="btn btn-lg btn-outline-success rounded-pill w-100 mt-3"><a asp-controller="Formularios" asp-action="Registro">Registrate</a></button>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6">
                <img src="~/img/home/mainFoto.jpg" alt="Una chica sacándose un selfie" class="w-100" />
            </div>
        </div>
    </div>
    <div class="container-fluid sectionServicios">
        <div class="row d-flex justify-content-center mt-5">
            <div class="col-lg-6 d-flex justify-content-center mt-5">
                <div class="container-img mt-sm-5 mt-md-0 mt-lg-5">
                    <h2 class="display-3">¡Encuentra el corte y a el peluquero perfecto para la ocasión!</h2>
                </div>
            </div>
            <div class="col-lg-6 d-flex justify-content-center">
                <img src="~/img/home/barberoFoto.png" alt="Barbero cortando el pelo" class="img-fluid w-50" />
            </div>
        </div>
    </div>
    <div class="container-fluid sectionPeluqueria">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-6 d-flex justify-content-center mt-5">
                <div class="container-img mt-sm-5 mt-md-0 mt-lg-5">
                    <h2 class="display-3">¡Descubre <span class="fw-bold">aquí</span> tu peluquería más cercana!</h2>
                </div>
            </div>
            <div class="col-lg-6 d-flex justify-content-center">
                <img src="~/img/home/peluqueriaFoto.png" alt="Foto de una peluqueria" class="img-fluid w-50" />
            </div>
        </div>
    </div>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</html>