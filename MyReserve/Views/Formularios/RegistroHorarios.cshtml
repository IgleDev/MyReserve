@model IEnumerable<MyReserve.Models.TablasBBDD.Horarios.Horarios>

@{
    var peluNombre = ViewBag.peluNombre;
    ViewData["Title"] = "Registro Horarios";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @section Styles {
        <link rel="stylesheet" href="~/css/formulario/editarservicios.css" asp-append-version="true" />
    }
    <title>RegistroHorarios</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-5">
                <h2 class="display-2 text-center">Bienvenido <span>@peluNombre</span> escoge tus horarios</h2>
            </div>
            <div class="col-12 mt-3">
                <p class="opacity-75 text-center">Seleccione las horas para sus servicios</p>
            </div>
        </div>
        <div class="row">
            <form asp-action="GuardarHorarios" method="post">
                @if(Model != null) {
                    <div class="d-inline-flex flex-wrap mb-2" id="horarios">
                        <div class="d-inline-flex justify-content-center flex-wrap mb-2 mt-5">
                            @foreach(var horario in Model) {
                                <div class="form-check mt-2">
                                    <input type="checkbox" class="btn-check" autocomplete="off" name="seleccionarHorarios"
                                           value="@horario.hora_id" id="btn-check-@horario.hora_id" />
                                    <label class="btn" for="btn-check-@horario.hora_id">@horario.hora_fecha</label>
                                </div>
                            }
                        </div>
                    </div>
                }
                <div class="col-12 d-flex justify-content-center">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
            <div class="col-12 p-0 mt-5 d-flex justify-content-between flex-wrap">
                <a asp-action="Portal" asp-controller="Peluquerias" class="btn btn-outline-info rounded-pill"><i class="fa-solid fa-arrow-left"></i> Volver</a>
            </div>
        </div>
    </div>
</body>
</html>
