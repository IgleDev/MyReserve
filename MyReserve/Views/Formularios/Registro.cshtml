@model MyReserve.Models.TablasBBDD.Usuarios.Usuarios

@{
    ViewData["Title"] = "Registro";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @section Styles {
        <!--El style que renderizamos-->
        <link rel="stylesheet" href="~/css/formulario/registro.css" asp-append-version="true" />
    }
    <title>Registro</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="d-none d-md-flex col-md-6 d-flex titleSection">
                <h1 class="display-1">My Reserve</h1>
            </div>
            <div class="col-12 col-md-6 d-flex flex-column justify-content-center align-items-center">
                <form asp-action="Registro" method="post" id="formRegistro">
                    <div id="part1">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group text-start mt-2 w-100">
                            <label asp-for="usu_nombre" class="control-label h4">Usuario</label>
                            <input asp-for="usu_nombre" class="form-control" placeholder="Nombre de Usuario" id="txtNombre" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group text-start mt-2 w-100">
                            <label asp-for="usu_correo_electronico" class="control-label h4">Correo Electrónico</label>
                            <input asp-for="usu_correo_electronico" class="form-control" placeholder="Correo Electrónico" id="txtCorreo" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group text-start mt-2 w-100">
                            <label asp-for="usu_contrasenha" class="control-label h4">Contraseña</label>
                            <input asp-for="usu_contrasenha" type="password" class="form-control" placeholder="Contraseña" id="txtContrasenha" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4 mb-4 w-100">
                            <input type="submit" value="Crear cuenta" class="btn btn-primary w-50" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/forms/registro.js"></script>
</html>
