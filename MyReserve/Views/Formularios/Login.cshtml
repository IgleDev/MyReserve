@model MyReserve.Models.TablasBBDD.Usuarios.Usuarios

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @section Styles { <!--El style que renderizamos-->
        <link rel="stylesheet" href="~/css/formulario/login.css" asp-append-version="true" />
    }
    <title>Login</title>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <h1 class="text-center display-1">My Reserve</h1>
        </div>
        <div class="col-md-6 col-lg-12 d-flex justify-content-center mt-5">
            <form asp-action="Login" method="post" id="formLogin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="usu_correo_electronico" class="control-label">Correo Electronico</label>
                    <input asp-for="usu_correo_electronico" class="form-control" placeholder="Correo Electronico" id="txtCorreo" />
                    <span asp-validation-for="usu_correo_electronico" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="usu_contrasenha" class="control-label">Contraseña</label>
                    <input asp-for="usu_contrasenha" class="form-control" placeholder="Contraseña" id="txtContrasenha"/>
                    <span asp-validation-for="usu_contrasenha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Inicar Sesión" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Registro">No Tienes Cuenta? Registrate</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/forms/login.js"></script>
</html>
