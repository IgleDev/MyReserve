@model MyReserve.Models.TablasBBDD.GrupoPeluqueria.GrupoPeluqueria

@{
    ViewData["Title"] = "Registro Grupo";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @section Styles {
        <!--El style que renderizamos-->
        <link rel="stylesheet" href="~/css/formulario/registro.css" asp-append-version="true" />
    }
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="d-none d-md-flex col-md-6 d-flex titleSection">
                <h1 class="display-1">My Reserve</h1>
            </div>
            <div class="col-12 col-md-6 d-flex flex-column justify-content-center align-items-center">
                <form asp-action="RegistroGrupos" method="post" id="formRegistroGrupos">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-start mt-2 w-100">
                        <label asp-for="gp_nombre" class="control-label h4">Nombre Grupo</label>
                        <input asp-for="gp_nombre" class="form-control" placeholder="Nombre del Grupo" id="txtNombre" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group text-start mt-2 w-100">
                        <label asp-for="gp_correo_electronico" class="control-label h4">Correo Electrónico</label>
                        <input asp-for="gp_correo_electronico" class="form-control" placeholder="Correo Electrónico" id="txtCorreo" />
                        @Html.ValidationMessage("gp_correo_electronico")
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group text-start mt-2 w-100">
                        <label asp-for="gp_contrasenha" class="control-label h4">Contraseña</label>
                        <input asp-for="gp_contrasenha" type="password" class="form-control" placeholder="Contraseña" id="txtContrasenha" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 mb-4 w-100">
                        <input type="submit" value="Unete a la familia" class="btn btn-primary w-100" />
                    </div>
                </form>
            </div>
            <div class="d-flex justify-content-center col-12 p-2 register">
                <a asp-action="LoginGrupo" class="text-white me-5">¿Ya tienes una empresa?</a>
            </div>
        </div>
    </div>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/forms/registroGrupo.js"></script>
</html>
